@using EasyForm.Entities;
@model Question

@{
    ViewData["Title"] = "Items";
}

<h2>Items</h2>
<h6>Question: @Model.Text</h6>
<div class="col-md-6 text-right">
    <a>
        @Html.ActionLink("Create New Item", "Create", new { QuestionId = Model.Id })
    </a>
</div>
<hr />
<div>
    <table class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr>

                <th style="width:60%;">
                    Title
                </th>
                <th style="width:60%;">
                    SpanishTitle
                </th>
                <th style="width:20%;">
                    Active
                </th>
                <th style="width:20%;">
                    Actions
                </th>
            </tr>
        </thead>
        @foreach (var item in Model.QuestionItems)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpanishTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { ItemId = item.Id }, new { @class = "details-link" })
                    @Html.ActionLink("Delete", "Delete", new { ItemId = item.Id }, new { @class = "details-link" })
                    @{
                        if (item.IsActive)
                        {
                            @Html.ActionLink("Deactive", "Toggle", new { ItemId = item.Id, CurrentStatus = item.IsActive }, new { @class = "details-link" })
                        }
                        else
                        {
                            @Html.ActionLink("Active", "Toggle", new { ItemId = item.Id, CurrentStatus = item.IsActive }, new { @class = "details-link" })
                        }
                    }
                </td>

            </tr>
        }

    </table>
</div>

