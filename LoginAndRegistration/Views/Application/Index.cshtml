@using EasyForm.Entities;
@model IEnumerable<Application>

@{
    ViewData["Title"] = "Applications";

}

<h2>Applications</h2>
<div class="col-md-6 text-right">
    <a>
        @Html.ActionLink("Create New Application", "Create")
    </a>
</div>
<div>
    <table class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr>

                <th style="width:30%;">
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th style="width:40%;">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th style="width:30%;">
                    Actions
                </th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { applicationId = item.Id }, new { @class = "details-link" })
                    @Html.ActionLink("Delete", "Delete", new { applicationId = item.Id }, new { @class = "details-link" })
                    @Html.ActionLink("Parts", "Parts", new { applicationId = item.Id }, new { @class = "details-link" })
                </td>

            </tr>
        }

    </table>
</div>