@using EasyForm.ViewModel;
@model GetApplicationPartVm

@{
    ViewData["Title"] = "Application Parts";
}

<h2>Application parts</h2>
<div class="col-md-6 text-right">
    <a>
        @Html.ActionLink("Create New Part", "Create", new { applicationId = Model.ApplicationId })
    </a>
</div>
<hr />
<div>
    <table class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr>

                <th style="width:30%;">
                    Title
                </th>
                <th style="width:30%;">
                    SpanishTitle
                </th>
                <th style="width:10%;">
                    Description
                </th>
                <th style="width:10%;">
                    ApplicationName
                </th>
                <th style="width:20%;">
                    Actions
                </th>
            </tr>
        </thead>
        @foreach (var item in Model.Parts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpanishTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { PartId = item.Id }, new { @class = "details-link" })
                    @Html.ActionLink("Delete", "Delete", new { PartId = item.Id }, new { @class = "details-link" })
                    @Html.ActionLink("Questions", "Index", "Question", new { PartId = item.Id }, new { @class = "details-link" })
                </td>

            </tr>
        }

    </table>
</div>

