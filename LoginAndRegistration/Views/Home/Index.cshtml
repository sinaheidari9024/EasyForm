@model IEnumerable<GetUserApplicationViewModel>

@{
    ViewData["Title"] = "Requests";

}

<h2>Requests</h2>
<div class="col-md-6 text-right">
    <a >
        @Html.ActionLink("Create New Application", "CreateNew", new { @class = "details-link" })
    </a>
</div>
<div>
    <table class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SpanishTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreationDate)
                </th>
                <th style="width:120px;">
                    Actions
                </th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpanishTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { userApplicationId = item.Id }, new { @class = "details-link" })
                    @Html.ActionLink("Delete", "Delete", new { userApplicationId = item.Id }, new { @class = "details-link" })
                </td>

            </tr>
        }

    </table>
</div>
