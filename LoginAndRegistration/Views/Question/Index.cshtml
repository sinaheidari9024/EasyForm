@using EasyForm.Enum;
@using EasyForm.ViewModel;
@model GetQuestionVm

@{
    ViewData["Title"] = "Questions";
}

<h2>Questions</h2>
<div class="col-md-6 text-right">
    <a>
        @Html.ActionLink("Create New Question", "Create", new { applicationId = Model.PartId })
    </a>
</div>
<hr />
<div>
    <table class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr>

                <th style="width:5%;">
                    Num
                </th>
                <th style="width:40%;">
                    Text
                </th>
                <th style="width:5%;">
                    Required
                </th>
                <th style="width:5%;">
                    Type
                </th>
                <th style="width:5%;">
                    Max
                </th>
                <th style="width:5%;">
                    Min
                </th>
                <th style="width:10%;">
                    PartName
                </th>
                <th style="width:10%;">
                    ApplicationName
                </th>

                <th style="width:15%;">
                    Actions
                </th>
            </tr>
        </thead>
        @foreach (var item in Model.Questions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsRequierd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxLengh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Minlengh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { QuestionId = item.Id }, new { @class = "details-link" })
                    @Html.ActionLink("Delete", "Delete", new { QuestionId = item.Id }, new { @class = "details-link" })

                    @{
                        if (item.Type == QuestionType.DropDown || item.Type == QuestionType.CheckBox || item.Type == QuestionType.OptionBox)
                        {
                            @Html.ActionLink("Items", "Index", "QuestionItems", new { QuestionId = item.Id }, new { @class = "details-link" });
                        }

                        if (item.IsActive)
                        {
                            @Html.ActionLink("DeActive", "ToggleActivation", new { QuestionId = item.Id, CurrentStatus = item.IsActive }, new { @class = "details-link" })
                        }
                        else
                        {
                            @Html.ActionLink("Active", "ToggleActivation", new { QuestionId = item.Id, CurrentStatus = item.IsActive }, new { @class = "details-link" })
                        }
                    }

                </td>

            </tr>
        }

    </table>
</div>

